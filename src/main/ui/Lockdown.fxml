<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="152.0" prefWidth="482.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.LockdownController">
   <children>
      <TitledPane collapsible="false" prefHeight="161.0" prefWidth="482.0" text="Select Lockdown Dates">
         <content>
            <BorderPane prefHeight="142.0" prefWidth="480.0">
               <center>
                  <FlowPane alignment="BOTTOM_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="98.0" prefWidth="460.0" BorderPane.alignment="CENTER">
                     <children>
                        <DatePicker fx:id="startDatePicker" onAction="#handleDatePick" promptText="Start Date">
                           <FlowPane.margin>
                              <Insets bottom="10.0" left="20.0" right="10.0" />
                           </FlowPane.margin>
                        </DatePicker>
                        <DatePicker fx:id="endDatePicker" onAction="#handleDatePick" promptText="End Date">
                           <FlowPane.margin>
                              <Insets bottom="10.0" left="10.0" right="20.0" />
                           </FlowPane.margin>
                        </DatePicker>
                        <Label fx:id="status">
                           <FlowPane.margin>
                              <Insets bottom="20.0" right="10.0" top="10.0" />
                           </FlowPane.margin>
                        </Label>
                        <Button fx:id="OKButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#handleOKButton" text="OK">
                           <FlowPane.margin>
                              <Insets bottom="20.0" left="10.0" right="20.0" top="10.0" />
                           </FlowPane.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleCancelButton" text="Cancel">
                           <FlowPane.margin>
                              <Insets bottom="20.0" right="20.0" top="10.0" />
                           </FlowPane.margin>
                        </Button>
                     </children>
                  </FlowPane>
               </center>
            </BorderPane>
         </content>
      </TitledPane>
      <Label alignment="TOP_LEFT" />
   </children>
</AnchorPane>
